<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <PackageTags>dex;specifications</PackageTags>
    <RepositoryUrl>https://github.com/dex-it/dex-common</RepositoryUrl>
    <Copyright>dex</Copyright>
    <PackageProjectUrl>https://github.com/dex-it/dex-common/projects/1</PackageProjectUrl>
    <RepositoryType>github</RepositoryType>
    <TargetFramework>netstandard2.1</TargetFramework>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\.editorconfig" Link=".editorconfig" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.CodeAnalysis.NetAnalyzers" Version="5.0.3">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="System.Runtime.Serialization.Primitives" Version="4.3.0" />
  </ItemGroup>

  <ItemGroup Condition=" '$(TargetFramework)' == 'net462' ">
    <Reference Include="System" />
    <Reference Include="Microsoft.CSharp" />
  </ItemGroup>

</Project>
